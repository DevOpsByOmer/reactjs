pipeline {
    agent any

    environment {
        APP_DIR    = "app/FastAPI"
        IMAGE_NAME = "fast-api"
        IMAGE_TAG  = "${env.GIT_COMMIT}"
        DOCKERHUB_CREDS = credentials('dockerhub-creds')
        SONAR_TOKEN = credentials('sonar-token')
        REGISTRY   = "docker.io"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('SonarCloud Scan') {
            steps {
                sh '''
                  sonar-scanner \
                    -Dsonar.projectKey=DevOpsByOmer_reactjs \
                    -Dsonar.organization=devopsbyomer \
                    -Dsonar.host.url=https://sonarcloud.io \
                    -Dsonar.login=$SONAR_TOKEN
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${APP_DIR}") {
                    sh """
                      docker build \
                        -t ${DOCKERHUB_CREDS_USR}/${IMAGE_NAME}:latest \
                        -t ${DOCKERHUB_CREDS_USR}/${IMAGE_NAME}:${IMAGE_TAG} .
                    """
                }
            }
        }
         stage('Trivy Scan') {
            steps {
                sh '''
                  trivy image \
                    --exit-code 1 \
                    --severity CRITICAL \
                    $DOCKERHUB_USER/$IMAGE_NAME:latest
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                sh """
                  echo "${DOCKERHUB_CREDS_PSW}" | docker login \
                    -u "${DOCKERHUB_CREDS_USR}" --password-stdin

                  docker push ${DOCKERHUB_CREDS_USR}/${IMAGE_NAME}:latest
                  docker push ${DOCKERHUB_CREDS_USR}/${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }
    }

    post {
        always {
            sh 'docker logout || true'
        }
        success {
            echo "Image pushed successfully"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}
